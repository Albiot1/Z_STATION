/// @function get_spr(spr_id)
/// @arg spr_id
function get_spr(spr_id){
switch(spr_id)
	{
	case "spr_gun_0": return spr_gun_0 break;
	case "spr_gun_1": return spr_gun_1 break;
	case "spr_gun_2": return spr_gun_2 break;
	case "spr_gun_3": return spr_gun_3 break;
	case "spr_player_gun_idle": return spr_player_gun_idle break;
	case "spr_player_gun_reload": return spr_player_gun_reload break;
	case "spr_player_gun_shot": return spr_player_gun_shot break;
	case "spr_mag": return spr_mag break;
	case "spr_shell": return spr_shell break;
	case "spr_shell_1": return spr_shell_1 break;
	case "spr_bullet": return spr_bullet break;
	case "spr_player_gun_1_idle": return spr_player_gun_1_idle break;
	case "spr_player_gun_1_shot": return spr_player_gun_1_shot break;
	case "spr_player_gun_1_reload": return spr_player_gun_1_reload break;
	case "spr_player_gun_2_idle": return spr_player_gun_2_idle break;
	case "spr_player_gun_2_reload": return spr_player_gun_2_reload break;
	case "spr_player_gun_2_shot": return spr_player_gun_2_shot break;
	case "spr_player_gun_3_idle": return spr_player_gun_3_idle break;
	case "spr_player_gun_3_shot": return spr_player_gun_3_shot break;
	case "spr_melee_hitbox_normal": return spr_melee_hitbox_normal break;
	}	
}
